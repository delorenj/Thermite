# Thermite Environment Configuration
# Copy this file to .env and update values for your environment

# ===========================================
# Database Configuration
# ===========================================

POSTGRES_DB=thermite
POSTGRES_USER=thermite
POSTGRES_PASSWORD=thermite_dev_password  # CHANGE IN PRODUCTION
POSTGRES_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================

REDIS_PORT=6379

# ===========================================
# RabbitMQ Configuration
# ===========================================

RABBITMQ_USER=thermite
RABBITMQ_PASSWORD=thermite_dev_password  # CHANGE IN PRODUCTION
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ===========================================
# Authentication Service
# ===========================================

JWT_SECRET_KEY=dev_jwt_secret_change_in_production  # GENERATE 256-bit key for production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# ===========================================
# Application Configuration
# ===========================================

# API Base URL (for frontend)
API_BASE_URL=http://localhost

# WebSocket URL (for game client)
WS_URL=ws://localhost:9001

# Node Environment (development, staging, production)
NODE_ENV=development

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Traefik Logging
TRAEFIK_LOG_LEVEL=INFO

# ===========================================
# Service Ports (Internal)
# ===========================================

# Backend Services
MATCHMAKING_PORT=8002
PERSISTENCE_PORT=8003
AUTH_PORT=8004
ORCHESTRATOR_PORT=8005
ECONOMY_PORT=8006

# Frontend
PRE_RAID_UI_PORT=3000

# Game Server (WebSocket)
GAME_SERVER_PORT=9001

# ===========================================
# Docker Configuration
# ===========================================

# Game Server Docker Image
GAME_SERVER_IMAGE=thermite/game-server:latest

# ===========================================
# Production Security Notes
# ===========================================

# Before deploying to production:
#
# 1. Generate secure JWT secret:
#    openssl rand -base64 32
#
# 2. Use strong database passwords:
#    openssl rand -base64 24
#
# 3. Configure TLS certificates in Traefik
#
# 4. Set NODE_ENV=production
#
# 5. Disable Traefik insecure API:
#    Remove "--api.insecure=true" from docker-compose.yml
#
# 6. Use environment-specific secrets management:
#    - Docker Secrets (Swarm)
#    - Kubernetes Secrets
#    - Vault / AWS Secrets Manager
